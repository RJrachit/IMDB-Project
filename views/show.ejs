      <p>By <%= reviews[i].author.displayName %> on <%=reviews[i].submissionDate%></p>
      <p><%=reviews[i].reviewText.substring(0,500)%><%if(reviews[i].reviewText.length > 500){%><a href = "#p<%=i%>" id="<%=i%>"><i>.....Read more</i></a><span style ="display : none;" id = "p<%=i%>"><%=reviews[i].reviewText.substring(500)%></span>
        <%}%>
      </p>

      <script type="text/javascript">
        $("#<%=i%>").click(function(){
          console.log('asdafa');
          $("#p<%=i%>").show();
          $("#<%=i%>").hide();
        })
      </script>
    <%}%>
    <%}else{%>
      <p>No reviews to show.</p>
    <%}%>



    <h3>comments</h3>
    <% var i = -1%>

    <ul id= "comments-section">

    <%comments.forEach(function(comment){%>
      <%i++%>
      <li class="comment-section">

        <div >
          <img class="display-pic" src="https://api.adorable.io/avatars/285/<%=comment.username%>.png" alt="" height="60" width="60">
        </div>

        <div class="">
          <strong><%=comment.username%></strong> <i><%=comment.date%></i>
          <p><%= comment.body.substring(0,250)%><%if(comment.body.length > 250){%><a href = "#c<%=i%>" id="c<%=i%>"><i>.....Read more</i></a><span style ="display : none;" id = "cid<%=i%>"><%=comment.body.substring(500)%></span>
            <%}%>
          </p>
          <script type="text/javascript">
            $("#c<%=i%>").click(function(){
              console.log('asdafa');
              $("#cid<%=i%>").show();
              $("#c<%=i%>").hide();
            })
          </script>


          <!-- this section checks if the user has already liked the post or not on front end, precaution is taken care of checking liked and notLiked at backend-->
          <%if(comment.upvotes.users.find(function(x) {%> <!-- <finds if logged user exists in upvotes array or not -->
            <% return x == username %>
          <%}) != undefined){%>
            <button type="submit" class="upvote" name="<%=comment._id%>" value="liked">downvote</button> <!--if user exist-->
          <%}else{%>
            <button type="submit" class="upvote" name="<%=comment._id%>" value="notLiked">upvote</button> <!--if user doesnt exist-->
          <%}%>

          <%if(comment.username == username){%>
            <form class="delete" action="/deleteComment" method="post">
              <button type="submit" name="delete" value="<%=comment._id%>">delete</button>
            </form>
          <%}%>

        </div>

      </li>
    <%});%>

    </ul>

    <script type="text/javascript">
      //script for upvotes
      $(function(){
        var socket = io();
        $('.upvote').click(function(e){
          e.preventDefault();
          var commentId = $(this).attr('name');
          console.log(commentId);
          if("<%=auth%>" == "false"){ //checking if user is logged in or not
            $(this).text("login first");
          }else{
            if($(this).val()=="liked"){ //checking if the post is already liked by the current user
              $(this).text("already liked");
              socket.emit("downvote",{commentId : commentId,username : "<%=username%>"});//if liked then downvote it
            }else{
              socket.emit("upvote",{commentId : commentId,username : "<%=username%>"});//if not liked then upvote it
            }
          }
        });

        socket.on("upvote",function(comment){
          $('[name = '+comment.commentId+']').val('liked').text('downvote'); //changing notliked value(upvote) to liked value(downvote)
        })

        socket.on("downvote",function(comment){
          $('[name = '+comment.commentId+']').val('notliked').text('upvote');//vice versa
        })

      });
    </script>


    <script>

        //Script For new Comments
        $(function () {
        var socket = io();
        $('.comment-send').submit(function(e) {
          e.preventDefault(); // prevents page reloading
          socket.emit('new comment',{titleId :"<%=titleId%>",body : $('#commentBody').val(),username :"<%=username%>",auth :"<%=auth%>"});
          $('#commentBody').val('');
        })

        socket.on("comment added",function(newComment){ //after the comment is added we need to render it also
          $("#comments-section").append($('<li class="comment-section">').html('<div ><img class="display-pic" src="https://api.adorable.io/avatars/285/newComment.username.png" alt="" height="60" width="60"></div><div class=""><strong>' + newComment.username + '</strong> <i>' + newComment.date + '</i><p>'+ newComment.body +'</p><button type="submit" class="upvote" name='+newComment._id+' value="notLiked">upvote</button><form class="delete" action="/deleteComment" method="post"><button type="submit" name="delete" value='+newComment._id+'>delete</button></form>'))
        })
        socket.on("comment failed",function(){//in case the comment is not updated or the user is not loggeg in or authorised
          $("#comments-section").append('nooooooo');
        })
      });

    </script>


    <form class="comment-send" action="" >

      <input type="hidden" name="titleId" value= "<%=titleId%>">
      <input id = "commentBody" type="text" name="body" placeholder="Join the Discussion">
      <button type="submit" name="button">Submit</button>
    </form>
